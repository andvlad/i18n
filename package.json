{
  "name": "@nanostores/i18n",
  "version": "0.7.1",
  "description": "A tiny (â‰ˆ600 bytes) i18n library for React/Preact/Vue/Svelte",
  "keywords": [
    "nano",
    "nanostores",
    "i18n",
    "internationalization",
    "localization",
    "react",
    "preact",
    "vue",
    "svelte"
  ],
  "scripts": {
    "unit": "tsm node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
    "test": "c8 yarn unit && eslint . && check-dts && size-limit",
    "start": "vite demo/"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "nanostores/i18n",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^14.0.0 || ^16.0.0 || >=18.0.0"
  },
  "peerDependencies": {
    "nanostores": "^0.7.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^47.2.0",
    "@nanostores/persistent": "^0.7.0",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "c8": "^7.12.0",
    "check-dts": "^0.6.7",
    "clean-publish": "^4.0.1",
    "conditional-type-checks": "^1.0.6",
    "eslint": "^8.26.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "nanodelay": "^2.0.2",
    "nanospy": "^0.5.0",
    "nanostores": "^0.7.0",
    "size-limit": "^8.1.0",
    "tsm": "^2.2.2",
    "typescript": "^4.8.4",
    "uvu": "^0.5.6",
    "vite": "^3.2.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "reporter": "lcov",
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "consistent-return": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Minimum",
      "import": "{ localeFrom, createI18n }",
      "limit": "660 B"
    },
    {
      "name": "Maximum",
      "import": "{ localeFrom, browser, createI18n, params, count, formatter, createProcessor }",
      "limit": "1093 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
